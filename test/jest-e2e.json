{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@src/(.*)": "<rootDir>/src/$1",
    "@common/(.*)": "<rootDir>/src/common/$1",
    "@user/(.*)": "<rootDir>/src/user/$1",
    "@auth/(.*)": "<rootDir>/src/auth/$1",
    "@cache/(.*)": "<rootDir>/src/cache/$1",
    "@budget/(.*)": "<rootDir>/src/budget/$1",
    "@expense/(.*)": "<rootDir>/src/expense/$1",
    "@classification/(.*)": "<rootDir>/src/classification/$1",
    "@test/(.*)": "<rootDir>/test/$1"
  }
}
